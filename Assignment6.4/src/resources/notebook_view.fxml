<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<BorderPane fx:controller="controller.NoteController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">


   <top>
      <Label text="Notebook App" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="titleField" />
            <TextArea fx:id="contentArea" prefHeight="200.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" onAction="#addNote" text="Add" />
             <HBox spacing="10">
                 <Button fx:id="editButton" mnemonicParsing="false" onAction="#editNote" text="Edit" />
                 <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteNote" text="Delete" />
             </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <ListView fx:id="notesListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
